<h1>Books</h1>
<table>
<thead>
<tr>
  <th>title</th>
  <th>body</th>
  <th></th>
</tr>
</thead>

<tbody>
  <% @books.each do |book| %>
  <tr>
    <td>
      <span><%= book.title %></span>
    </td>
    <td>
      <span><%= book.body %></span>
    </td>
    <td>
      <span><%= link_to "Show", book_path(book) %></span>
    </td>
    <td>
      <span><%= link_to "Edit", edit_book_path(book) %></span>
    </td>
    <td>
      <span><%= link_to "Destroy", book_path(book),  method: :delete,"data-confirm", notice: "File has been successfully deleted." => "本当に削除しますか" %></span>
    </td>
  </tr>
</tbody>
<% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'CreateBooks' %>

<% end %>