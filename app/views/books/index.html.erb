<h1>Books</h1>
<table>
<thead>
<tr>
  <th>title</th>
  <th>body</th>
  <th></th>
</tr>
</thead>

<tbody>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>
    <td>
      <%= link_to "Show", book_path(book) %>
    </td>
    <td>
      <%= link_to "Edit", edit_book_path(book) %>
    </td>
    <td>
      <%= link_to "Destroy", book_path(book),  method: :delete,"data-confirm" => "Are you sure you want to permanently delete this file ?" %>
    </td>
  </tr>
</tbody>
<% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'CreateBooks' %>

<% end %>